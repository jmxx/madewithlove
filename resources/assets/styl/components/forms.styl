.Form
  padding: 20px 25px
  &.Login
    background: #fff
    width: 480px

.Form-control
  margin-bottom: 25px;
  position relative
  // border-bottom: 1px solid #000

.Label
  display: block;
  font-size: 16px
  margin-bottom: 7px

.Input
  appearance none
  background: linear-gradient(#fafafa, #fff)
  //box-shadow inset 0 1px 2px rgba(#000, 0.1)
  border-radius 0
  border 1px solid rgba(#000, 0.1)
  outline 0
  padding 10px 15px
  width 100%
  &:focus
    box-shadow inset 0 1px 0 rgba(#ccc, 0.1), 0 0 1px rgba(#09f, 0.5)
    + .Label
      background #fff
      font-size 14px
      top 0
      // text-align right
      //right 15px
  + .Label
    centered(v)
    color #a4a4a4
    cursor text
    left 10px
    // right 15px
    padding 0 5px
    transition font-size 0.2s, top 0.2s
    white-space nowrap
