.Section
  background transparent
  display block
  height 100vh
  overflow auto
  position relative
  width 100vw
  z-index 0
  clearfix()
  &::after
    background #fff /* fallback for old browsers */
    bottom0
    content ''
    display none
    opacity 0.5
    position absolute
    top0
    width 100%
    z-index -1
